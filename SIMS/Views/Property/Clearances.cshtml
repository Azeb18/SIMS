@model IEnumerable<SIMS.Models.PropertyClearance>
@{
    ViewBag.Title = "Property";
}

<h2>Property and Store Clearance Requests</h2>
<h4>Clearance requests sent to Property and Store</h4>
<hr />
@Html.Partial("_Alerts")

<div class="row">
    <div class="col-sm-12">
        @if (Model.Count().Equals(0))
        {
            <div class="alert alert-warning">
                <p>There are no property and store clearance requests.</p>
            </div>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student Id</th>
                        <th>Clearance Reason</th>
                        <th>Remark</th>
                        <th>Request Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var propertyClearace in Model)
                    {
                        <tr>
                            <td>@propertyClearace.Clearance.Student.IdNumber</td>
                            <td>@propertyClearace.Clearance.Reason.Reason</td>
                            <td>@propertyClearace.Clearance.Remark</td>
                            <td>@propertyClearace.Clearance.RequestDate</td>
                            <td>@Html.ActionLink("Show Details", "Clearance", new { id = propertyClearace.PropertyClearanceId })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>