@model SIMS.Models.AcademicDeanClearance
@{
    ViewBag.Title = "Academic Dean Clearance";
}

<h2>Academic Dean Clearance Details</h2>
<h4>Clearance request details</h4>
<hr />

@Html.Partial("_Alerts")
<div class="row">
    <div class="col-sm-6">
        @* Student Information *@
        <h4>Student Information</h4>
        <br />
        <div class="row">
            <div class="col-sm-4">
                <img src="~/Content/avatar.png" alt="" class="img img-responsive" style="width: 150px; height: 150px" />
            </div>
            <div class="col-sm-8">
                <dl class="">
                    <dt>Name</dt>
                    <dd>@Model.Clearance.Student.FirstName @Model.Clearance.Student.MiddleName @Model.Clearance.Student.LastName</dd>

                    <dt>Program</dt>
                    <dd>@Model.Clearance.Student.Program.Name</dd>

                    <dt>Level</dt>
                    <dd>@Model.Clearance.Student.Level.Name</dd>

                    <dt>Id Number</dt>
                    <dd>@Model.Clearance.Student.IdNumber</dd>
                </dl>
            </div>
        </div>

        <hr />

        @* Clearance Information *@
        <h4>Clearance Request Details</h4>
        <br />
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Reason</th>
                    <th>Remark</th>
                    <th>Request Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Clearance.Reason.Reason</td>
                    <td>@Model.Clearance.Remark</td>
                    <td>@Model.Clearance.RequestDate</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-sm-6">
        @* Actions *@
        <div class="well">
            <h4>Actions</h4>
            <p>You can either clear the student or deny the clearance request. Your account will be associated with this decision.</p>
            @using (Html.BeginForm("DenyClearance", "AcademicDean", new { id = @Model.AcademicDeanClearanceId }, FormMethod.Post, new { @class = "pull-left", style = "margin-right: 10px" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <button class="btn btn-danger">Deny Clearance</button>
                </div>
            }
            @using (Html.BeginForm("ClearStudent", "AcademicDean", new { id = @Model.AcademicDeanClearanceId }, FormMethod.Post, new { @class = "" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <button class="btn btn-success">Clear Student</button>
                </div>
            }
        </div>
    </div>
</div>